# i3 config file
set $mod Mod4
set $term termite
set $menu j4-dmenu-desktop

font pango: InconsolataGo Nerd Font 9

# Output configuration
output * bg ~/.config/sway/wallpaper_2560x1080.jpg fill
output "Goldstar Company Ltd LG ULTRAWIDE 0x0000B7AA" bg ~/.config/sway/wallpaper_2560x1080.jpg fill
output eDP-1 scale 1
output "Samsung Electric Company SAMSUNG 0x00000100" scale 2
# input
input "2:14:ETPS/2_Elantech_Touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

# Basics
  set $ws1 "1 "
  set $ws2 "2 "
  set $ws3 "3 "
  set $ws4 "4 "
  set $ws5 "5 "
  set $ws6 "6 "
  set $ws7 "7 "
  set $ws8 "8 "
  set $ws9 "9 "
  set $ws10 "10 "
# Meta key bindings
# Move window with mod+mouse drag
  floating_modifier $mod
# Kill focused window with mod+shift+q
  bindsym $mod+Shift+q kill
# Toggle fullscreen with mod+f
  bindsym $mod+f fullscreen
  bindsym $mod+Escape exec xkill
# change focus with mod+hjkl or mod+arrow
  bindsym $mod+Left focus left
  bindsym $mod+Down focus down
  bindsym $mod+Up focus up
  bindsym $mod+Right focus right

# move focused window with mod+shift+hjkl
  bindsym $mod+Shift+Left move left
  bindsym $mod+Shift+Down move down
  bindsym $mod+Shift+Up move up
  bindsym $mod+Shift+Right move right
# switch to workspace with mod+1234567890
  bindsym $mod+1 workspace $ws1
  bindsym $mod+2 workspace $ws2
  bindsym $mod+3 workspace $ws3
  bindsym $mod+4 workspace $ws4
  bindsym $mod+5 workspace $ws5
  bindsym $mod+6 workspace $ws6
  bindsym $mod+7 workspace $ws7
  bindsym $mod+8 workspace $ws8
  bindsym $mod+9 workspace $ws9
  bindsym $mod+0 workspace $ws10

# move container to workspace with meta+shift+1234567890
  bindsym $mod+Shift+1 move container to workspace $ws1
  bindsym $mod+Shift+2 move container to workspace $ws2
  bindsym $mod+Shift+3 move container to workspace $ws3
  bindsym $mod+Shift+4 move container to workspace $ws4
  bindsym $mod+Shift+5 move container to workspace $ws5
  bindsym $mod+Shift+6 move container to workspace $ws6
  bindsym $mod+Shift+7 move container to workspace $ws7
  bindsym $mod+Shift+8 move container to workspace $ws8
  bindsym $mod+Shift+9 move container to workspace $ws9
  bindsym $mod+Shift+0 move container to workspace $ws10

# Resizing containers:
mode "resize" {
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $sysmenu "system: [l]ogout  [p]oweroff  [r]eboot"
bindsym $mod+Shift+e mode $sysmenu

mode $sysmenu {
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym r         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}
# split in horizontal orientation
bindsym $mod+h split h
# split in vertical orientation
bindsym $mod+v split v
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# Toggle floating with mod+shift+space
bindsym $mod+Shift+space floating toggle
# Swap focus between tiling windows and floating windows
bindsym $mod+space focus mode_toggle
# Move focus to parent container with mod+a
bindsym $mod+a focus parent
# Move windows in and out of the scratchpad with mod+(shift)+t
bindsym $mod+Shift+t move scratchpad
bindsym $mod+t scratchpad show
# Cycle through border styles with mod+b
bindsym $mod+b border toggle
# reload the configuration file
bindsym $mod+Shift+c reload
# Run terminal with mod+enter
bindsym $mod+Return exec $term
# Lock
bindsym $mod+Control+l exec grim /tmp/lock.png &&  mogrify -scale 10% -scale 1000% /tmp/lock.png && swaylock -i /tmp/lock.png
# Screenshots
bindsym Print exec grim ~/screenshot.png
# dmenu with mod+d for arbituary programs
bindsym $mod+d exec $menu

# Open applications on specific workspaces
# assign [class="Chromium"] $ws1
# assign [class="Termite"] $ws2

# Open specific applications in floating mode
for_window [title="htop"] floating enable border pixel 1

# Start Applications
bindsym $mod+Ctrl+b exec termite -e 'htop'
bindsym $mod+Ctrl+r 			exec $term -e ranger

#default_floating_border none
#hide_edge_borders both
gaps edge_gaps off
gaps inner 2
gaps outer 3
smart_gaps on
default_border pixel 1

# Base16 colors
set $base00 #282c34
set $base01 #353b45
set $base02 #3e4451
set $base03 #545862
set $base04 #565c64
set $base05 #abb2bf
set $base06 #b6bdca
set $base07 #c8ccd4
set $base08 #e06c75
set $base09 #d19a66
set $base0A #e5c07b
set $base0B #98c379
set $base0C #56b6c2
set $base0D #61afef
set $base0E #c678dd
set $base0F #be5046

# Status Bar:
bar {
  position bottom
  # tray_output XWAYLAND0
    status_command i3blocks -c ~/.config/sway/blocks.conf
    colors {
      background $base00
        separator  $base01
        statusline $base04

# State                     Border  BG      Text
        focused_workspace   $base05 $base0D $base00
        active_workspace    $base05 $base03 $base00
        inactive_workspace  $base03 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base0A $base0A $base00
    }
}

client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
#client.placeholder      $base00 $base00 $base05 $base00 $base00
#client.background       $base07

exec --no-startup-id mako --default-timeout 10000
