# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term termite
set $menu termite --name "fzf-menu" -e "bash -c 'compgen -c | sort -u | fzf | xargs -r swaymsg -t command exec'"

# Output configuration
output * bg ~/.config/sway/wallpaper.jpg fill
output "Goldstar Company Ltd LG ULTRAWIDE 0x0000B7AA" bg ~/.config/sway/wallpaper_2560x1080.jpg fill
output eDP-1 scale 1
output "Samsung Electric Company SAMSUNG 0x00000100" scale 2
# input
input "2:14:ETPS/2_Elantech_Touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}


# Basics:
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exit

# Moving around:
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Workspaces: switch to workspace, move focused window to workspace
set $workspace1 "1 "
set $workspace2 "2 "
set $workspace3 "3 "
set $workspace4 "4 "
set $workspace5 "5 "
set $workspace6 "6 "
set $workspace7 "7 "
set $workspace8 "8 "
set $workspace9 "9 "
set $workspace10 "10 "
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

# Layout stuff:
bindsym $mod+b splith #split horizontal
bindsym $mod+v splitv #split vertical layout
bindsym $mod+s layout stacking #switch to stacking layout
bindsym $mod+w layout tabbed #swatch to tabbed
bindsym $mod+e layout toggle split #toggle split
bindsym $mod+f fullscreen # toggle fullscreen
bindsym $mod+Shift+space floating toggle #toggle floating
bindsym $mod+space focus mode_toggle #swap between tiling and floating area
bindsym $mod+a focus parent #move focus to the parent container 

# Scratchpad:
bindsym $mod+Shift+minus move scratchpad #move to scratchpad
bindsym $mod+minus scratchpad show #show scratchpade window

# Audio
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

bindsym $mod+Control+l exec grim /tmp/lock.png &&  mogrify -scale 10% -scale 1000% /tmp/lock.png && swaylock -i /tmp/lock.png
#bindsym Print exec grim ~/screenshot.png
bindsym Print exec \
  slurp | grim -g - /tmp/screenshot.png && \
  cat /tmp/screenshot.png | xclip -selection clipboard -target image/png -i


# Resizing containers:
mode "resize" {
  bindsym $left resize shrink width 10 px or 10 ppt
  bindsym $down resize grow height 10 px or 10 ppt
  bindsym $up resize shrink height 10 px or 10 ppt
  bindsym $right resize grow width 10 px or 10 ppt

  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#default_floating_border none
#hide_edge_borders both
gaps edge_gaps off
gaps inner 3
gaps outer 0
smart_gaps on
default_border pixel 1
default_floating_border pixel 1

font pango: InconsolataGo Nerd Font

# Base16 colors
set $base00 #282c34
set $base01 #353b45
set $base02 #3e4451
set $base03 #545862
set $base04 #565c64
set $base05 #abb2bf
set $base06 #b6bdca
set $base07 #c8ccd4
set $base08 #e06c75
set $base09 #d19a66
set $base0A #e5c07b
set $base0B #98c379
set $base0C #56b6c2
set $base0D #61afef
set $base0E #c678dd
set $base0F #be5046

# Status Bar:
bar {
  position bottom
  status_command i3blocks -c ~/.config/sway/blocks.conf
  colors {
      background $base00
      separator  $base01
      statusline $base04

      # State             Border  BG      Text
      focused_workspace   $base05 $base0D $base00
      active_workspace    $base05 $base03 $base00
      inactive_workspace  $base03 $base01 $base05
      urgent_workspace    $base08 $base08 $base00
      binding_mode        $base0A $base0A $base00
  }
}

client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
#client.placeholder      $base00 $base00 $base05 $base00 $base00
#client.background       $base07

exec --no-startup-id mako --default-timeout 10000

#Window clases
for_window [app_id="^fzf-menu$"] floating enable
